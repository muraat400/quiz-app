{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "jsx": "react-jsx",          // ✅ React 17+ için önerilen JSX modu
    "module": "ESNext",          // ✅ Vite / ESM uyumlu
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],   // ✅ Jest global tanımları için
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
